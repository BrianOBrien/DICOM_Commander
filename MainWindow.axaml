<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DicomSync.MainWindow"
        Width="1300" Height="700"
        MinWidth="1150"
        Title="DICOM Sync">

  <!--
    Layout:
      Row 0: Global AE
      Row 1: Shared Date Range
      Row 2: Left PACS | Actions | Right PACS
      Row 3: Status bar
  -->
  <Grid RowDefinitions="Auto,Auto,*,Auto">

    <!-- ========================================================= -->
    <!-- Row 0 : GLOBAL AE CONFIG                                 -->
    <!-- ========================================================= -->
    <Border Grid.Row="0"
            Margin="10,10,10,5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4">

      <Border Margin="6"
              BorderBrush="Gray"
              BorderThickness="1"
              CornerRadius="3"
              HorizontalAlignment="Stretch">

        <Grid Margin="6"
              ColumnDefinitions="Auto,*,Auto,*,Auto,Auto,Auto">

          <TextBlock Grid.Column="0"
                     Text="AE Title:"
                     VerticalAlignment="Center"
                     Margin="0,0,4,0" />
          <TextBox Grid.Column="1"
                   x:Name="AetTitleBox"
                   Margin="0,0,8,0"
                   Watermark="REMOTE_AE" />

          <TextBlock Grid.Column="2"
                     Text="Hostname:"
                     VerticalAlignment="Center"
                     Margin="0,0,4,0" />
          <TextBox Grid.Column="3"
                   x:Name="HostnameBox"
                   Margin="0,0,8,0"
                   Watermark="pacs.example.com" />

          <TextBlock Grid.Column="4"
                     Text="Port:"
                     VerticalAlignment="Center"
                     Margin="0,0,4,0" />
          <TextBox Grid.Column="5"
                   x:Name="PortBox"
                   Width="70"
                   Text="104"
                   Margin="0,0,8,0" />

          <Button Grid.Column="6"
                  Content="Echo"
                  Width="80"
                  Margin="0,0,4,0"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Click="OnEchoClick" />

        </Grid>
      </Border>
    </Border>


    <!-- ========================================================= -->
    <!-- Row 1 : SHARED DATE RANGE BAR                             -->
    <!-- ========================================================= -->
    <Border Grid.Row="1"
            Margin="10,0,10,5"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="4">
      <Grid Margin="8">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="12">

          <TextBlock Text="Date Range:"
                     VerticalAlignment="Center" />

          <TextBlock Text="From:"
                     VerticalAlignment="Center" />
          <DatePicker x:Name="FromDatePicker"
                      HorizontalAlignment="Left"
                      MinWidth="260"
                      Width="260" />

          <TextBlock Text="To:"
                     VerticalAlignment="Center"
                     Margin="12,0,0,0" />
          <DatePicker x:Name="ToDatePicker"
                      HorizontalAlignment="Left"
                      MinWidth="260"
                      Width="260" />

        </StackPanel>
      </Grid>
    </Border>


    <!-- ========================================================= -->
    <!-- Row 2 : LEFT PACS | ACTION PANEL | RIGHT PACS            -->
    <!-- ========================================================= -->
    <Grid Grid.Row="2"
          Margin="10,5,10,5"
          ColumnDefinitions="*,Auto,*">

      <!-- ========================================= -->
      <!-- LEFT PACS PANEL                           -->
      <!-- ========================================= -->
      <Border Grid.Column="0"
              Margin="0,0,5,0"
              BorderBrush="Gray"
              BorderThickness="1"
              CornerRadius="4">

        <Grid Margin="6"
              RowDefinitions="Auto,*">

          <!-- LEFT AE rectangle -->
          <Border Grid.Row="0"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  CornerRadius="3"
                  Margin="0,0,0,6">

            <Grid Margin="6"
                  ColumnDefinitions="Auto,*,Auto,*,Auto,Auto,Auto">

              <TextBlock Grid.Column="0"
                         Text="AE Title:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="1"
                       Margin="0,0,8,0"
                       Watermark="LEFT_AE" />

              <TextBlock Grid.Column="2"
                         Text="Hostname:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="3"
                       Margin="0,0,8,0"
                       Watermark="left.host" />

              <TextBlock Grid.Column="4"
                         Text="Port:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="5"
                       Width="70"
                       Text="104"
                       Margin="0,0,8,0" />

              <Button Grid.Column="6"
                      Content="Echo"
                      Width="70"
                      Margin="0,0,4,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center" />

            </Grid>
          </Border>

          <!-- LEFT TreeView -->
          <Border Grid.Row="1"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  CornerRadius="3">
            <TreeView Margin="4"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
              <TreeViewItem Header="Left Root">
                <TreeViewItem Header="Left 1.1"/>
                <TreeViewItem Header="Left 1.2"/>
              </TreeViewItem>
            </TreeView>
          </Border>

        </Grid>
      </Border>


      <!-- ========================================= -->
      <!-- MIDDLE ACTION PANEL                        -->
      <!-- ========================================= -->
      <Border Grid.Column="1"
              Margin="5,0,5,0"
              BorderBrush="Gray"
              BorderThickness="1"
              CornerRadius="4"
              VerticalAlignment="Stretch">

        <StackPanel Orientation="Vertical"
                    Margin="8"
                    VerticalAlignment="Top">

          <TextBlock Text="Actions"
                     FontWeight="Bold"
                     Margin="0,0,0,8"
                     HorizontalAlignment="Center"/>

          <Button Content="Query Left"
                  Width="170"
                  Margin="0,0,0,4" />

          <Button Content="Query Right"
                  Width="170"
                  Margin="0,0,0,4" />

          <Button Content="Move Left → Right"
                  Width="170"
                  Margin="0,0,0,4" />

          <Button Content="Move Right → Left"
                  Width="170"
                  Margin="0,0,0,4" />

          <Button Content="Sync"
                  Width="170"
                  Margin="0,0,0,4" />

          <Button Content="Pause"
                  Width="170" />

        </StackPanel>
      </Border>


      <!-- ========================================= -->
      <!-- RIGHT PACS PANEL                          -->
      <!-- ========================================= -->
      <Border Grid.Column="2"
              Margin="5,0,0,0"
              BorderBrush="Gray"
              BorderThickness="1"
              CornerRadius="4">

        <Grid Margin="6"
              RowDefinitions="Auto,*">

          <!-- RIGHT AE rectangle -->
          <Border Grid.Row="0"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  CornerRadius="3"
                  Margin="0,0,0,6">

            <Grid Margin="6"
                  ColumnDefinitions="Auto,*,Auto,*,Auto,Auto,Auto">

              <TextBlock Grid.Column="0"
                         Text="AE Title:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="1"
                       Margin="0,0,8,0"
                       Watermark="RIGHT_AE" />

              <TextBlock Grid.Column="2"
                         Text="Hostname:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="3"
                       Margin="0,0,8,0"
                       Watermark="right.host" />

              <TextBlock Grid.Column="4"
                         Text="Port:"
                         VerticalAlignment="Center"
                         Margin="0,0,4,0" />
              <TextBox Grid.Column="5"
                       Width="70"
                       Text="104"
                       Margin="0,0,8,0" />

              <Button Grid.Column="6"
                      Content="Echo"
                      Width="70"
                      Margin="0,0,4,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Center" />

            </Grid>
          </Border>

          <!-- RIGHT TreeView -->
          <Border Grid.Row="1"
                  BorderBrush="Gray"
                  BorderThickness="1"
                  CornerRadius="3">
            <TreeView Margin="4"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
              <TreeViewItem Header="Right Root">
                <TreeViewItem Header="Right 1.1" />
                <TreeViewItem Header="Right 1.2" />
              </TreeViewItem>
            </TreeView>
          </Border>

        </Grid>
      </Border>
    </Grid>


    <!-- ========================================================= -->
    <!-- Row 3 : STATUS BAR                                        -->
    <!-- ========================================================= -->
    <TextBlock x:Name="StatusText"
               Grid.Row="3"
               Margin="10,0,10,10"
               VerticalAlignment="Center"
               Text="Ready."
               Foreground="Gray" />

  </Grid>
</Window>
